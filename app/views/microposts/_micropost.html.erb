<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user.nom, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posté il y a <%= time_ago_in_words(micropost.created_at) %>.
    <% if current_user?(micropost.user) %>
      <%= link_to "supprimer", micropost, method: :delete, data: { confirm: "Etes-vous sûr ?" } %>
    <% end %>
</span>
  </span>
</li>
